<UserControl x:Class="QuanLyGaraOto.ViewUserControl.ViewUC.RepairReceiptUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyGaraOto.ViewUserControl.ViewUC"
             
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:uc="clr-namespace:QuanLyGaraOto.ProjectUserControl"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal" 
             TextOptions.TextRenderingMode="Auto"

             mc:Ignorable="d"  
             d:DesignHeight="733" d:DesignWidth="1383"
             d:Background="white"
             x:Name="ucAddAccessories">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0">
                <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                    <TextBlock Text="Ngày sửa chữa: " FontSize="20" TextAlignment="Center"/>
                    <DatePicker Width="300" Margin="10,0,0,0" VerticalAlignment="Top"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                    <TextBlock Text="Biển số xe: " FontSize="20" TextAlignment="Center"/>
                    <TextBox x:Name="tbPrice" Margin="55,0,0,0" Width="300" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                    <TextBlock Text="Tổng số tiền: " FontSize="20" TextAlignment="Center"/>
                    <TextBlock Margin="40,0,0,0" Text="0đ" Width="300" FontSize="20" TextAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" HorizontalAlignment="Center"
                        Width="100" Height="50" Content="Hoàn tất" Margin="5,5,5,5"/>
                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" HorizontalAlignment="Center"
                        Width="100" Height="50" Content="In Phiếu" Margin="50,5,5,5"/>
                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" HorizontalAlignment="Center"
                        Width="200" Height="50" Content="Xóa và Lập phiếu mới" Margin="50,5,5,5"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="auto" MinHeight="481.75"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <DockPanel>
                        <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" 
                                HorizontalAlignment="Center"
                                Height="50"
                                Width="690"
                                Content="Thêm vật phẩm"
                                d:Command="{Binding}"/>
                        <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" 
                                HorizontalAlignment="Right"
                                Height="50"
                                Width="690"
                                Content="Xóa vật phẩm"
                                d:Command="{Binding}"/>
                    </DockPanel>
                </StackPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" Grid.Row="1">
                    <ListView ItemsSource="{Binding HieuXeList}" SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="STT" DisplayMemberBinding="{Binding}"/>
                                <GridViewColumn Header="Nội dung" DisplayMemberBinding="{Binding}"/>
                                <GridViewColumn Header="VTPT" DisplayMemberBinding="{Binding}"/>
                                <GridViewColumn Header="Số lượng" DisplayMemberBinding="{Binding}"/>
                                <GridViewColumn Header="Đơn giá" DisplayMemberBinding="{Binding}"/>
                                <GridViewColumn Header="Tiền công" DisplayMemberBinding="{Binding}"/>
                                <GridViewColumn Header="Thành tiền" DisplayMemberBinding="{Binding}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
               
            </Grid>
        </Grid>
    </Grid>
</UserControl>

